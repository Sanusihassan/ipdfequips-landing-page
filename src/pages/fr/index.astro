---
const lang = "fr";
import { landing_page, tool } from "../../content/content-fr";
import Header from "../../components/Header.astro";
import { OpenGraph } from "pdfequips-open-graph/OpenGraph";
import { Footer } from "pdfequips-footer/components/Footer";
import LandingPage from "../../components/LandingPage";
import SaveTokenScript from "../../components/SaveTokenScript.astro";
import "../../index.scss";
import Icons from "../../components/Icons.astro";
import { ConditionalAdsense } from "../../components/ConditionalAdsense";
// import Alternatives from "../../components/Alternatives.astro";
const websiteSchema = {
	"@context": "http://schema.org",
	"@type": "WebSite",
	name: "PDFEquips",
	url: "https://www.pdfequips.com",
	description: `PDFEquips est une plateforme gratuite en ligne proposant une collection d'outils pour gérer et manipuler des fichiers PDF. Elle permet aux utilisateurs d'effectuer diverses opérations telles que la conversion, la fusion, la division et la signature de PDFs, sans avoir besoin d'installer de logiciel de bureau. Le service est utilisé par des professionnels, des étudiants et des entreprises pour un traitement de documents rapide et efficace, avec un accent sur la sécurité, y compris la suppression automatique des fichiers après un délai défini.`,
	sameAs: [
		"https://www.facebook.com/pdfequipsfb",
		"https://twitter.com/PDFEquips",
		"https://www.linkedin.com/company/pdfequips",
	],
};
---

<html lang={lang} dir="ltr">
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/svg+xml" href="/images/icons/logo.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>PDFEquips | Outils PDF en ligne gratuits</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="PDFEquips propose des outils en ligne gratuits pour gérer, éditer et optimiser les fichiers PDF pour les professionnels, les étudiants et les particuliers—sans avoir besoin de logiciels coûteux."
    />
    <link rel="icon" href="/logo.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta
      name="keywords"
      content="Outils PDF, Convertir en PDF, JPG en PDF, WORD en PDF, POWERPOINT en PDF, EXCEL en PDF, HTML en PDF, Convertir de PDF, PDF en JPG, PDF en WORD, PDF en POWERPOINT, PDF en EXCEL, PDF en PDF/A, PDF en texte, fusionner PDF, compresser PDF."
    />
    <OpenGraph
      ogDescription="PDFEquips - Outils PDF gratuits | Simplifiez vos besoins PDF avec PDFEquips.com"
      ogLocale="fr_FR"
      ogImage="https://www.pdfequips.com/pdfequips-fr.png"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" cross-origin="" />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <Icons />
    <SaveTokenScript />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)}></script>
    <meta http-equiv="Content-Language" content={lang} />
    <!-- <Alternatives /> -->
    <meta
      name="ahrefs-site-verification"
      content="a532671b5b7f09bad30e7e65542ecf2f8f28a1ef5a25b2bec358924427540367"
    />
  </head>
  <body>
    <ConditionalAdsense client:load />
    <Header lang={lang} />
    <LandingPage landing_page={landing_page} tool={tool} lang={lang} />
    <Footer
      lang={lang}
      includeTools={false}
      title="Outils PDF en ligne gratuits"
    />
  </body>
</html>
