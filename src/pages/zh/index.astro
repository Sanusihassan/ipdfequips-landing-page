---
const lang = "zh";
import { landing_page, tool, footer } from "../../content/content-zh";
import Header from "../../components/Header.astro";
import { OpenGraph } from "pdfequips-open-graph/OpenGraph";
import { Footer } from "pdfequips-footer/components/Footer";
import LandingPage from "../../components/LandingPage";
import SaveTokenScript from "../../components/SaveTokenScript.astro";
import "../../index.scss";
import Icons from "../../components/Icons.astro";
import { ConditionalAdsense } from "../../components/ConditionalAdsense";
const websiteSchema = {
	"@context": "http://schema.org",
	"@type": "WebSite",
	name: "PDFEquips",
	url: "https://www.pdfequips.com",
	description: `PDFEquips 是一个免费的基于网络的平台，提供一系列在线管理与操作 PDF 文件的工具。用户无需安装桌面软件，即可执行转换、合并、拆分、签名等多种操作。该服务被专业人士、学生和企业用于快速高效的文档处理，注重安全性，包括在设定时间后自动删除文件。`,
	sameAs: [
		"https://www.facebook.com/pdfequipsfb",
		"https://twitter.com/PDFEquips",
		"https://www.linkedin.com/company/pdfequips",
	],
};
---

<html lang={lang} dir="ltr">
  <head>
    <meta charset="utf-8" />
    <!-- <link rel="icon" type="image/svg+xml" href="/images/icons/logo.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title>PDFEquips | 免费在线PDF工具</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta
      name="description"
      content="PDFEquips 提供免费的在线工具，用于管理、编辑和优化 PDF 文件，适合专业人士、学生和个人—无需昂贵的软件。"
    />
    <link rel="icon" href="/logo.png" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />
    <meta
      name="keywords"
      content="PDF 工具，转换为 PDF、JPG 为 PDF、WORD 为 PDF、POWERPOINT 为 PDF、EXCEL 为 PDF、HTML 为 PDF、从 PDF 转换、PDF 为 JPG、PDF 为 WORD、PDF 为 POWERPOINT、PDF 为 EXCEL、PDF 为 PDF/A、PDF 到文本、合并 PDF、压缩 PDF。"
    />
    <OpenGraph
      ogDescription="PDFEquips - 免费 PDF 工具 | 使用 PDFEquips.com 简化您的 PDF 需求"
      ogUrl="https://www.pdfequips.com/zh/"
      ogLocale="zh_CN"
      ogImage="https://www.pdfequips.com/pdfequips-zh.png"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" cross-origin="" />
    <link
      href="https://fonts.googleapis.com/css2?family=Raleway:ital,wght@0,100;0,300;0,400;0,500;0,600;0,700;0,800;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap"
      rel="stylesheet"
    />
    <Icons />
    <SaveTokenScript />
    <script type="application/ld+json" set:html={JSON.stringify(websiteSchema)}></script>
    <meta http-equiv="Content-Language" content={lang} />
    <!-- <Alternatives /> -->
    <meta
      name="ahrefs-site-verification"
      content="a532671b5b7f09bad30e7e65542ecf2f8f28a1ef5a25b2bec358924427540367"
    />
  </head>
  <body>
    <ConditionalAdsense client:load />
    <Header lang={lang} />
    <LandingPage landing_page={landing_page} tool={tool} lang={lang} />
    <Footer lang={lang} includeTools={false} title="免费在线PDF工具" />
  </body>
</html>
